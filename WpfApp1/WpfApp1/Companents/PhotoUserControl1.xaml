<UserControl x:Class="WpfApp1.Companents.PhotoUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Companents"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Grid>
        <StackPanel>
            <Image Source="{Binding PhotoByte}" x:Name="ImageImg" Height="250"></Image>
            <Button x:Name="MainBtn" Click="MainBtn_Click" Background="#FFC80000" FontWeight="Medium">Сделать главным</Button>
            <Button x:Name="DeleteBtn" Click="DeleteBtn_Click" Background="#FFC80000" FontWeight="Medium">Удалить</Button>
        </StackPanel>
    </Grid>
</UserControl>
