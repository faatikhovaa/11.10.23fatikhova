<Window x:Class="WpfApp1.Companents.Resources.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Companents.Resources"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
      
        <Grid.RowDefinitions>
            <RowDefinition Height="178*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="/Resources/image2.jpg" Margin="0,0,3,50" Grid.RowSpan="2"/>
        <Button HorizontalAlignment="Left"  Grid.Row="5" Height="50" Width="100" BorderBrush="White" Background="Red">🗑</Button>
        <Button HorizontalAlignment="Left" Margin="105,1,0,0" Grid.Row="5" Height="50" Width="50" Background="#FFF4EFEF" BorderBrush="White">🤍</Button>
        <Button HorizontalAlignment="Left" Margin="160,1,0,0" Grid.Row="5" Height="50" Width="50" Background= "#FFF4EFEF" BorderBrush="White">📈</Button>
    </Grid>
</Window>
